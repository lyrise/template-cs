{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Sample/Sample.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "env": {
                    "BuildTargetName": "vscode",
                    "DesignMode": "true"
                }
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
